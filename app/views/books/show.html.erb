<div class="title"><%= @book.title %>
<%= link_to image_tag("edit.png", class: "icons"), edit_book_path(@book) %>
<!-- <a href ="/books/<%= @book.id%>/edit"> (edit)</a> -->
<%= check(@book) %>

</div>

<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<div class = "show-left">
<img class = "show-book-photo" src="<%= @book.photo_url%>">
</div>

<div class ="show-right">
    <div class="book-content">
        <p><span>Title:</span> <%= @book.title %></p>
        <p><span>Author:</span> <%= @book.author %></p>
    </div>



  <h3>Comments</h3>

  <% @comments.each do |comment| %>
    <p> Subject: <%= comment.subject %> </p>
    <p> Added: <%= comment.created_at.strftime("%b %d %y") %> <%= comment.user_email %> </p>
    <p> <%= comment.body %> </p>
    <%= link_to "Edit Comment", edit_book_comment_path(@book, comment) %>

  <% end %>

  <h3>Leave a comment:</h3>
  <div class="commentbox">
  <%= render partial: "comments/form" %>
</div>

</div>
